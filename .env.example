# Google Sheets 설정 (서비스 계정 방식)
GOOGLE_SHEETS_ID=1JW1tA4i480y_2yOHNpwEoovCKeiEPqRLilpY7g48YdI
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_PRIVATE_KEY_ID=your_private_key_id
